<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ListView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/lsExercise"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtValue"
        android:text="Exercise: Duration: "
        android:layout_centerInParent="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Roll"
        android:id="@+id/btnRoll"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/txtValue"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnRoll"
        android:layout_centerHorizontal="true"
        android:id="@+id/linAdd"
        android:layout_marginTop="50dp">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Enter Exercise:"
            android:layout_marginRight="20dp"
            android:id="@+id/edtAddExercise"/>

        <Button
            android:id="@+id/btnAddExercise"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnRoll"
            android:layout_centerHorizontal="true"
            android:text="Add Exercise" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linAdd"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Enter Exercise:"
            android:layout_marginRight="20dp"
            android:id="@+id/edtRemExercise"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remove Exercise"
            android:id="@+id/btnRemExercise"/>

    </LinearLayout>

</RelativeLayout>